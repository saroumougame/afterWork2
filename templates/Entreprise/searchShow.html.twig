{% extends 'base.html.twig' %}

{% block content %}

<section class="content">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2> Recherche entreprise
                        <small>resultats {{ nbresult }}</small>
                    </h2>
                </div>
                <div class="col-lg-5 col-md-6 col-sm-12">
                    <ul class="breadcrumb float-md-right">
                        <li class="breadcrumb-item"><a href=""><i class="zmdi zmdi-group-work"></i> Entreprise</a></li>
                        <li class="breadcrumb-item active"> search</li>
                    </ul>
                </div>
            </div>
        </div>



                {% for entreprises in entreprise  %}
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="header">
                            <h2><strong> {{ entreprises.nom }} </strong> </h2>
                            <ul class="header-dropdown">
                                <li class="remove">
                                    <a role="button" class="boxs-close"><i class="zmdi zmdi-close"></i></a>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">

                                        {{ entreprises.description | raw }}


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- #END# Custom Content -->
        </div>
        </div>
        {%   endfor %}





    </section>


{% endblock %}


