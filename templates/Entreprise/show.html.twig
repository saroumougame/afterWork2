{% extends 'base.html.twig' %}



{% block content %}

    <section class="content">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-7 col-md-6 col-sm-12">
                    <h2> {{ entreprise.nom }}
                        <small>Fil d'actualité</small>
                    </h2>
                </div>
                <div class="col-lg-5 col-md-6 col-sm-12">
                    <ul class="breadcrumb float-md-right">
                        <li class="breadcrumb-item"><a href=""><i class="zmdi zmdi-group-work"></i> Entreprise</a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Actualités</a></li>
                        <li class="breadcrumb-item active"> {{ entreprise.nom }}</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row clearfix">
                <!-- Basic Examples -->

                <button type="button" class="btn btn-info waves-effect m-r-20" data-toggle="modal" data-target="#entrepriseDescription"> En savoir plus</button>


                {% if statue == true %}
                <button type="button" class="btn btn-info waves-effect m-r-20" data-toggle="modal" data-target="#actuEntreprise">Publier une Actu</button>

            {% endif %}

            <!-- #END# Custom Content -->
        </div>
        </div>


                {% for actus in actu  %}
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="header">
                            <h2><strong> {{ actus.titre }} </strong> </h2>
                            <ul class="header-dropdown">
                                <li class="remove">
                                    <a role="button" class="boxs-close"><i class="zmdi zmdi-close"></i></a>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="form-group">

                                        {{ actus.message | raw }}


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

                    </div>
                    </div>
            <!-- #END# Custom Content -->

        {%   endfor %}


    </section>

    <div class="modal fade" id="entrepriseDescription" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">


                    {{ entreprise.description | raw }}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger waves-effect" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>



    <div class="modal fade" id="actuEntreprise" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-body">

                    {% if statue == true %}

                    {{ form_start(formActu) }}
                    {{ form_errors(formActu) }}

                    {{ form_row(formActu.titre, { 'attr': {'class': 'form-control no-resize', 'placeholder': 'Titre'} })}}
                    <br>
                    {{ form_row(formActu.message, { 'attr': {'class': 'ckeditor'} }) }}
                    <br>
                    {{ form_row(formActu.submit, { 'attr': {'class': 'btn btn-raised btn-primary btn-round waves-effect'} }) }}

                    {{ form_end(formActu) }}


                    {{ form(formActu) }}

                    {% endif %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block js %}
    <script src="{{ asset('assets/Oreo/bundles/libscripts.bundle.js') }}"></script>
    <script src="{{ asset('assets/Oreo/bundles/vendorscripts.bundle.js') }}"></script>
    <script src="{{ asset('assets/Oreo/bundles/morrisscripts.bundle.js') }}"></script>
    <script src="{{ asset('assets/Oreo/bundles/jvectormap.bundle.js') }}"></script>
    <script src="{{ asset('assets/Oreo/bundles/knob.bundle.js') }}"></script>
    <script src="{{ asset('assets/Oreo/bundles/mainscripts.bundle.js') }}"></script>
    <script src="{{ asset('assets/Oreo/js/pages/index.js') }}"></script>

    <script src="{{ asset('assets/Oreo/plugins/ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('assets/Oreo/js/pages/forms/editors.js') }}"></script>

{% endblock %}